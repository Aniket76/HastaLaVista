<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginBottom="30dp"
                    android:background="@color/colorPrimary">

                    <View
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circular_btn_shape" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/acc_dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:src="@drawable/profile_icon" />

                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignBottom="@+id/acc_dp"
                        android:layout_alignRight="@+id/acc_dp"
                        android:background="@drawable/circular_btn_shape" />

                    <ImageView
                        android:id="@+id/acc_changeImage_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignBottom="@+id/acc_dp"
                        android:layout_alignRight="@+id/acc_dp"
                        android:padding="8dp"
                        android:src="@drawable/camera_icon" />


                </RelativeLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignBottom="@+id/profile_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="-30dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/acc_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/acc_dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/josefinsans_bold"
                            android:textColor="@color/colorAccent"
                            android:text="Name"
                            android:textSize="24sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/satisfy_regular"
                    android:text="Nick Name"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/acc_nickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/billabong"
                    android:textColor="#0000ff"
                    android:text="Tap name to edit"
                    android:textSize="26sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/satisfy_regular"
                    android:text="Phone Number"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/acc_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/billabong"
                    android:textColor="#0000ff"
                    android:text="Tap name to edit"
                    android:textSize="26sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/satisfy_regular"
                    android:text="Email Id"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/acc_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/billabong"
                    android:textColor="#0000ff"
                    android:text="Tap name to edit"
                    android:textSize="26sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/satisfy_regular"
                    android:text="About"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/acc_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/billabong"
                    android:textColor="#0000ff"
                    android:text="Tap name to edit"
                    android:textSize="26sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/satisfy_regular"
                    android:text="Hobbies"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/acc_hobbies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/billabong"
                    android:textColor="#0000ff"
                    android:text="Tap name to edit"
                    android:textSize="26sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/satisfy_regular"
                    android:text="Best Moment in College"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/acc_bestMoment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/billabong"
                    android:textColor="#0000ff"
                    android:text="Tap name to edit"
                    android:textSize="26sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/satisfy_regular"
                    android:text="Dream Job"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/acc_dreamJob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/acc_name"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:fontFamily="@font/billabong"
                    android:textColor="#0000ff"
                    android:text="Tap name to edit"
                    android:textSize="26sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorAccent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/title_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginTop="4dp"
                        android:padding="8dp"
                        android:src="@drawable/rateus_icon"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/acc_name"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:fontFamily="@font/satisfy_regular"
                        android:text="More Apps"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_image1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:padding="8dp"
                        android:src="@drawable/share_icon" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/acc_name"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:fontFamily="@font/satisfy_regular"
                        android:text="Share"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/title_image2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:padding="8dp"
                        android:src="@drawable/rate_icon" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/acc_name"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:fontFamily="@font/satisfy_regular"
                        android:text="Rate Us"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
